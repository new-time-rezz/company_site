<div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Contact Us</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
              <%= form_with(model: contact, local: true, id: 'contactForm', name:'sentMessage') do |form| %>
                <% if contact.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

                    <ul>
                    <% contact.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                        <%= form.text_field :name, placeholder:"Your Name *", class: "form-control", id: "name" %>
                      </div>

                <div class="form-group">
                  <%= form.text_field :email, placeholder:"Your Email *", class: "form-control", id: "email" %>
                </div>

                <div class="form-group">
                  <%= form.text_field :phone, placeholder:"Your Phone Number *", class: "form-control", id: "phone" %>
                </div>
              </div>
                <div class="col-md-6">
                <div class="form-group">
                  <%= form.text_area :message, placeholder:"Your Message *", class: "form-control", id: "message" %>
                </div>
              </div>

                <div class="clearfix"></div>
                  <div class="col-lg-12 text-center">
                    <div id="success"></div>
                      <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit" >
                      Send Message
                      </button>
                </div>
              </div>
            </div>
          </div>
        </div>
       <% end %>
